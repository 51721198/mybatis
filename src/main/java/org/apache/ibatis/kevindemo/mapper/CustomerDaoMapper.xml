<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.kevindemo.dao.CustomerDaoMapper">

    <resultMap id="CustomerResultMap" type="org.apache.ibatis.kevindemo.model.Customer">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <collection property="orders" resultMap="OrdersResult">
        </collection>
    </resultMap>

    <resultMap id="OrdersResult" type="org.apache.ibatis.kevindemo.model.Order">
        <id property="id" column="o_id"/>
        <result property="name" column="o_name"/>
        <result property="price" column="price"/>
    </resultMap>

    <select id="getCustomerList" resultMap="CustomerResultMap">
        select qc.id, qc.name, qo.id o_id, qo.name o_name, qo.price
        from `user` qc
        join `order` qo on qc.id = qo.customer_id
    </select>

</mapper>